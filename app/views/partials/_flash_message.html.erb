
<div class="flash-message">
	<% flash.each do |name, message| %>
		<div class="alert <%= alert_class name %> alert-dismissible fade show"
				 role="alert" id="alert-warning-01">
			<%= message %>
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" />
		</div>

		<%= javascript_tag do %>
			t.hideElement('alert-warning-01')
		<% end %>
	<% end %>
</div>

