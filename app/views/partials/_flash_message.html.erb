
<% flash.each do |name, message| %>
	<div class="alert <%= alert_class name %> alert- alert-dismissible fade show"
			 role="alert" id="alert-warning-01">
		<strong><%= message %></strong>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" />
	</div>

	<%= javascript_tag do %>
		const t = new Tools('alert-warning-01')
		t.closeAlert()
	<% end %>
<% end %>

