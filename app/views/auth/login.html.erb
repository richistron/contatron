
<div class="row">
	<h1>Login</h1>

	<%= form_tag(login_path, method: 'post') do %>

		<div class="mb-3">
			<%= label_tag :email, 'Email', class: 'form-label' %>
			<%= text_field_tag :email, @email, required: true, type: :email, class: 'form-control' %>
		</div>

		<div class="mb-3">
			<%= label_tag :password, 'Password' %>
			<%= password_field_tag :password, @password, required: true, class: 'form-control' %>
		</div>

		<div class="mb-3">
			<%= submit_tag 'Submit', class: 'btn btn-primary mb-3' %>
		</div>
	<% end %>
</div>
